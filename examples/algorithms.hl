// ==========================================
// 9. PRIME NUMBER CHECK
// ==========================================

lapor "\n[9] PRIME NUMBER CHECK"

fungsi isPrime(n)
    jika n <= 1
        kembalikan salah
    akhir
    
    jika n <= 3
        kembalikan benar
    akhir
    
    untuk i dari 2 sampai n-1
        jika n % i == 0
            kembalikan salah
        akhir
    akhir
    
    kembalikan benar
akhir

test_num = 17
is_prime = isPrime(test_num)

jika is_prime
    lapor teks(test_num) + " adalah bilangan prima"
atau
    lapor teks(test_num) + " bukan bilangan prima"
akhir

// ==========================================
// 10. SATIRE: CORRUPTION ALGORITHM
// ==========================================

lapor "\n[10] SATIRE: CORRUPTION DETECTION ALGORITHM"

fungsi detectCorruption(anggaran_proposal, anggaran_realisasi)
    selisih = anggaran_proposal - anggaran_realisasi
    persentase = selisih / anggaran_proposal * 100
    
    lapor "Anggaran Proposal: Rp " + teks(anggaran_proposal)
    lapor "Anggaran Realisasi: Rp " + teks(anggaran_realisasi)
    lapor "Selisih: Rp " + teks(selisih)
    lapor "Persentase: " + teks(persentase) + "%"
    
    jika persentase > 40
        kembalikan "SANGAT MENCURIGAKAN"
    ataujika persentase > 25
        kembalikan "MENCURIGAKAN"
    ataujika persentase > 10
        kembalikan "PERLU REVIEW"
    atau
        kembalikan "NORMAL"
    akhir
akhir

status_korupsi = detectCorruption(2500000000, 1200000000)
lapor "Status: " + status_korupsi

