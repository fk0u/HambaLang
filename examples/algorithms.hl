// 8. COUNT OCCURRENCES
// ==========================================

lapor "\n[8] COUNT OCCURRENCES"

fungsi countStatus(proyek_list, target_status)
    count = 0
    untuk i dari 0 sampai panjang(proyek_list)-1
        proyek = proyek_list[i]
        jika proyek["status"] == target_status
            count = count + 1
        akhir
    akhir
    kembalikan count
akhir

