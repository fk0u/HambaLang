// ==========================================
// 1. SORTING ALGORITHM (Bubble Sort)
// ==========================================

lapor "\n[1] BUBBLE SORT"

fungsi bubbleSort(arr)
    n = panjang(arr)
    
    untuk i dari 0 sampai n-2
        untuk j dari 0 sampai n-i-2
            jika arr[j] > arr[j+1]
                // Swap
                temp = arr[j]
                arr[j] = arr[j+1]
                arr[j+1] = temp
            akhir
        akhir
    akhir
    
    kembalikan arr
akhir

anggaran_proyek = [2500000000, 500000000, 15000000000, 1000000000, 750000000]

lapor "Anggaran sebelum sorting:"
lapor teks(anggaran_proyek)

sorted_anggaran = bubbleSort(anggaran_proyek)

lapor "Anggaran setelah sorting:"
lapor teks(sorted_anggaran)

// ==========================================
// 2. SEARCH ALGORITHM (Linear Search)
// ==========================================

lapor "\n[2] LINEAR SEARCH"

fungsi linearSearch(arr, target)
    untuk i dari 0 sampai panjang(arr)-1
        jika arr[i] == target
            kembalikan i
        akhir
    akhir
    kembalikan -1
akhir

proyek_list = ["Hambalang", "Meikarta", "Monas", "Tol Cipularang", "MRT Jakarta"]

cari = "Meikarta"
index = linearSearch(proyek_list, cari)

jika index >= 0
    lapor "Proyek '" + cari + "' ditemukan di index: " + teks(index)
atau
    lapor "Proyek tidak ditemukan"
akhir

// ==========================================
// 3. FIBONACCI SEQUENCE
// ==========================================

lapor "\n[3] FIBONACCI SEQUENCE"

fungsi fibonacci(n)
    jika n <= 1
        kembalikan n
    atau
        a = 0
        b = 1
        untuk i dari 2 sampai n
            c = a + b
            a = b
            b = c
        akhir
        kembalikan b
    akhir
akhir

lapor "10 Angka Fibonacci pertama:"
untuk i dari 0 sampai 9
    fib = fibonacci(i)
    lapor "Fib(" + teks(i) + ") = " + teks(fib)
akhir

// ==========================================
// 4. FACTORIAL
// ==========================================

lapor "\n[4] FACTORIAL"

fungsi factorial(n)
    jika n <= 1
        kembalikan 1
    atau
        hasil = 1
        untuk i dari 2 sampai n
            hasil = hasil * i
        akhir
        kembalikan hasil
    akhir
akhir

n = 5
result = factorial(n)
lapor "Factorial of " + teks(n) + " = " + teks(result)

// ==========================================
// 5. SUM OF ARRAY
// ==========================================

lapor "\n[5] SUM OF ARRAY"

fungsi sumArray(arr)
    total = 0
    untuk i dari 0 sampai panjang(arr)-1
        total = total + arr[i]
    akhir
    kembalikan total
akhir

budget_list = [1000000000, 2500000000, 750000000, 1200000000]
total_budget = sumArray(budget_list)

lapor "Budget list: " + teks(budget_list)
lapor "Total budget: Rp " + teks(total_budget)

// ==========================================
// 6. AVERAGE CALCULATION
// ==========================================

lapor "\n[6] AVERAGE"

fungsi average(arr)
    jika panjang(arr) == 0
        kembalikan 0
    atau
        total = sumArray(arr)
        rata = total / panjang(arr)
        kembalikan rata
    akhir
akhir

persentase_selesai = [60, 75, 45, 80, 55]
rata_selesai = average(persentase_selesai)

lapor "Persentase selesai proyek: " + teks(persentase_selesai)
lapor "Rata-rata: " + teks(rata_selesai) + "%"

// ==========================================
// 7. MIN & MAX
// ==========================================

lapor "\n[7] MIN & MAX"

fungsi findMin(arr)
    min_val = arr[0]
    untuk i dari 1 sampai panjang(arr)-1
        jika arr[i] < min_val
            min_val = arr[i]
        akhir
    akhir
    kembalikan min_val
akhir

fungsi findMax(arr)
    max_val = arr[0]
    untuk i dari 1 sampai panjang(arr)-1
        jika arr[i] > max_val
            max_val = arr[i]
        akhir
    akhir
    kembalikan max_val
akhir

data_anggaran = [2500000000, 500000000, 15000000000, 750000000]

min_anggaran = findMin(data_anggaran)
max_anggaran = findMax(data_anggaran)

lapor "Anggaran terendah: Rp " + teks(min_anggaran)
lapor "Anggaran tertinggi: Rp " + teks(max_anggaran)

