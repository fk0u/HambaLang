// ==========================================
// 3. OBJECTS / DICTS
// ==========================================

lapor "\n[3] OBJECTS"

proyek = {"nama": "Hambalang", "lokasi": "Bogor", "status": "Mangkrak", "tahun": 2011}

lapor "Lokasi: " + proyek["lokasi"]
lapor "Status: " + proyek["status"]

// ==========================================
// 4. ARITHMETIC OPERATIONS
// ==========================================

lapor "\n[4] OPERASI MATEMATIKA"

total_anggaran = 1000000000
biaya_aktual = 350000000
selisih = total_anggaran - biaya_aktual

lapor "Total Anggaran: Rp " + teks(total_anggaran)
lapor "Biaya Aktual: Rp " + teks(biaya_aktual)
lapor "Selisih (korupsi?): Rp " + teks(selisih)

// ==========================================
// 5. CONDITIONAL STATEMENTS
// ==========================================

lapor "\n[5] CONDITIONAL (IF/ELIF/ELSE)"

dana_tersisa = 750000000

jika dana_tersisa > 1000000000
    lapor "‚úÖ Dana mencukupi untuk lanjut"
ataujika dana_tersisa > 500000000
    lapor "‚ö†Ô∏è Dana cukup, tapi harus hati-hati"
atau
    lapor "üö® Dana kritis! Proyek terancam"
akhir

// ==========================================
// 6. LOOPS - WHILE
// ==========================================

lapor "\n[6] WHILE LOOP"

lapor "Proses approval berlapis..."
tingkat_approval = 1

selama tingkat_approval <= 5
    lapor "Approval tingkat " + teks(tingkat_approval) + " - Menunggu tanda tangan..."
    tingkat_approval = tingkat_approval + 1
akhir

lapor "‚úÖ Semua approval selesai!"

// ==========================================
// 7. LOOPS - FOR
// ==========================================

lapor "\n[7] FOR LOOP - Range"

lapor "Pembangunan 5 gedung:"
untuk gedung dari 1 sampai 5
    lapor "Gedung " + teks(gedung) + " - Dalam konstruksi"
akhir

lapor "\n[7b] FOR LOOP - Array Iteration"

lapor "Daftar vendor:"
vendors = ["PT Adhi", "PT Waskita", "PT Hutama"]

untuk vendor dalam vendors
    lapor "- " + vendor
akhir

// ==========================================
// 8. FUNCTIONS
// ==========================================

lapor "\n[8] FUNCTIONS"

fungsi hitungPajak(nominal, persen)
    hasil = nominal * persen / 100
    kembalikan hasil
akhir

anggaran_proyek = 1000000000
pajak = hitungPajak(anggaran_proyek, 10)

lapor "Anggaran: Rp " + teks(anggaran_proyek)
lapor "Pajak 10%: Rp " + teks(pajak)

// ==========================================
// 9. NESTED FUNCTIONS & LOGIC
// ==========================================

lapor "\n[9] NESTED LOGIC"

fungsi validasiAnggaran(budget, minimum)
    jika budget >= minimum
        kembalikan benar
    atau
        kembalikan salah
    akhir
akhir

budget_proposal = 500000000
valid = validasiAnggaran(budget_proposal, 300000000)

jika valid
    lapor "‚úÖ Proposal anggaran disetujui"
atau
    lapor "‚ùå Proposal ditolak"
akhir

