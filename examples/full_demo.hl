// HambaLang v2.0 - Complete Feature Demo
// Demonstrasi lengkap: Variables, Functions, Loops, Arrays, Objects

lapor "=== HAMBALANG v2.0 - COMPLETE DEMO ==="

// ==========================================
// 1. VARIABLES & DATA TYPES
// ==========================================

lapor "\n[1] VARIABLES & DATA TYPES"

nama = "Proyek Hambalang"
tahun = 2011
status = benar
dana_awal = 2500000000

lapor "Nama: " + nama
lapor "Tahun: " + teks(tahun)
lapor "Dana Awal: Rp " + teks(dana_awal)

// ==========================================
// 2. ARRAYS / LISTS
// ==========================================

lapor "\n[2] ARRAYS"

kontraktor = ["PT Adhi Karya", "PT Waskita", "PT Wijaya Karya"]
anggaran_per_fase = [500000000, 800000000, 1200000000]

lapor "Jumlah kontraktor: " + teks(panjang(kontraktor))
